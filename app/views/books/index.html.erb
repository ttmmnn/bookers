<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan= "3"></th>
      </tr>
    </thead>
    <tbody>
      <% @book.each do |book| %>
      <tr>
        <!--dbのtitleのデータ-->
        <td><%= book.title %></td>
        <!--dbのbodyのデータ-->
        <td><%= book.body %></td>
        <!--showのリンク link_toを使う-->
        <td><%= link_to 'Show', "/books/#{book.id}" %></td>
        <!--editのリンク link_toを使う-->
        <td></td>
        <!--destroyのリンク link_toを使う-->
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>




<h2>New book</h2>
<%= form_with model: @book, url:'/books',method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>